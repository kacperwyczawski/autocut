@using AutoCut.Frontend.Stores.Panels
@using AutoCut.Frontend.Stores.Panels.Actions
@using AutoCut.Frontend.Localization
@using AutoCut.Frontend.Stores.Optimization.Actions
@inject IDispatcher Dispatcher
@inject IState<PanelsState> PanelsState
@inject IStringLocalizer<GlobalResources> Localizer

<MudPaper Class="pa-4 mt-4">
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        OnClick="@OnOptimize">
        @Localizer["Optimize"]
    </MudButton>
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Error"
        OnClick="@OnReset">
        Reset all
    </MudButton>
</MudPaper>

@code
{
    private void OnOptimize()
    {
        Dispatcher.Dispatch(new OptimizeAction());
    }

    private void OnReset()
    {
        Dispatcher.Dispatch(new ResetAction());
    }
}