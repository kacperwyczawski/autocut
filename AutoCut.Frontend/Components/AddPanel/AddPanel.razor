@using AutoCut.Core.Panels
@using AutoCut.Frontend.Stores.Panels.Actions
@inject IDispatcher Dispatcher

<MudPaper Class="pa-4">
    <MudForm>
        <MudContainer Fixed="true">
            <MudStack Row="true">
                <MudNumericField
                    Label="Length"
                    Margin="Margin.Dense"
                    AdornmentText="mm"
                    Adornment="Adornment.End"
                    AdornmentColor="Color.Info"
                    Variant="Variant.Outlined"
                    @bind-Value="_length"/>
                <MudNumericField
                    Label="Width"
                    Margin="Margin.Dense"
                    AdornmentText="mm"
                    Adornment="Adornment.End"
                    AdornmentColor="Color.Info"
                    Variant="Variant.Outlined"
                    @bind-Value="_width"/>
                <MudNumericField
                    Label="Quantity"
                    Margin="Margin.Dense"
                    Variant="Variant.Outlined"
                    @bind-Value="_quantity"/>
                <MudTextField
                    Label="Name"
                    Margin="Margin.Dense"
                    Variant="Variant.Outlined"
                    @bind-Value="_name"/>
            </MudStack>
            <MudStack Row="true">
                <MudCheckBox
                    T="bool"
                    CheckedIcon="@Icons.Material.Filled.BorderTop"
                    UncheckedIcon="@Icons.Material.Filled.BorderTop"
                    UnCheckedColor="Color.Default"
                    Color="Color.Success"
                    DisableRipple="true"
                    Dense="true"
                    @bind-Checked="_top"/>
                <MudCheckBox
                    T="bool"
                    CheckedIcon="@Icons.Material.Filled.BorderBottom"
                    UncheckedIcon="@Icons.Material.Filled.BorderBottom"
                    UnCheckedColor="Color.Default"
                    Color="Color.Success"
                    DisableRipple="true"
                    Dense="true"
                    @bind-Checked="_bottom"/>
                <MudCheckBox
                    T="bool"
                    CheckedIcon="@Icons.Material.Filled.BorderRight"
                    UncheckedIcon="@Icons.Material.Filled.BorderRight"
                    UnCheckedColor="Color.Default"
                    Color="Color.Success"
                    DisableRipple="true"
                    Dense="true"
                    @bind-Checked="_right"/>
                <MudCheckBox
                    T="bool"
                    CheckedIcon="@Icons.Material.Filled.BorderLeft"
                    UncheckedIcon="@Icons.Material.Filled.BorderLeft"
                    UnCheckedColor="Color.Default"
                    Color="Color.Success"
                    DisableRipple="true"
                    Dense="true"
                    @bind-Checked="_left"/>
                <MudSpacer/>
                <MudButton
                    Color="Color.Success"
                    Variant="Variant.Filled"
                    Size="Size.Small"
                    OnClick="@Add">
                    Add
                </MudButton>
                <MudButton
                    Color="Color.Warning"
                    Variant="Variant.Outlined"
                    Size="Size.Small"
                    OnClick="@Reset">
                    Reset
                </MudButton>
            </MudStack>
        </MudContainer>
    </MudForm>
</MudPaper>

@code
{
    int _length;
    int _width;
    int _quantity = 1;
    string _name = "name";
    bool _top;
    bool _bottom;
    bool _right;
    bool _left;

    private void Reset()
    {
        _length = 0;
        _width = 0;
        _quantity = 1;
        _name = "name";
        _top = false;
        _bottom = false;
        _right = false;
        _left = false;
    }

    private void Add()
    {
        var panel = new CompressedPanel(
            new Panel(
                new Rectangle(_length, _width),
                new EdgeBanding(_left, _right, _top, _bottom),
                _name),
            _quantity);

        // TODO: Add validation
        Dispatcher.Dispatch(new AddAction(panel));
    }
}